<h2>Edit Recipe</h2>

<%= form_for(@recipe) do |f| %>
  <br>Name:<br>
  <%= f.text_field :name %><br><br>

  <br>Description:<br>
  <%= f.text_area :description %><br><br>

  <br>Ingredients:<br>
  <%= f.text_area :recipe_ingredients %><br><br>
  
