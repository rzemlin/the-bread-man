<h1>Editing Recipe</h1>

<%= render 'form', recipe: @recipe %>
<%= form_for(@recipe) do |f| %>
  <br>Name:<br>
  <%= f.text_field :name %><br><br>

  <br>Description:<br>
  <%= f.text_area :description %><br><br>

  <br>Ingredients:<br>
  <%= f.text_area :ingredients %><br><br>
  
  <%= f.submit %>

<%= link_to 'Show', @recipe %> 
<%= link_to 'Back', recipes_path %>
